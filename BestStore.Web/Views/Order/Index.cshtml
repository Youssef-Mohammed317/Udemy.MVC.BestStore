                <select class="form-select" 
                        onchange="location = this.value;" 
                        style="width: auto;"
                        id="pageSizeSelect"
                        aria-describedby="pageSizeIcon">
                    @{
                        int currentPageSize = Model.PaginatedOrders.PageSize;
                    }
                    @foreach (var size in new[] { 5, 10, 20, 50 })
                    {     
                        <option value="@Url.Action("Index", new OrderQueryParams { 
                                PageNumber = 1, 
                                PageSize = size,
                                Search = Model.Search,
                                SortBy = Model.SortBy,
                                Ascending = Model.Ascending
                            })"
                            selected="@(currentPageSize == size)"
