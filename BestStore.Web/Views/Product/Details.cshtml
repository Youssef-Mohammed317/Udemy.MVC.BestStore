@model ProductDetailsViewModel

@{
    ViewData["Title"] = Model.Name;
}

<div class="container py-5">
    <!-- Back Navigation -->
    <div class="mb-4">
        <a href="@Url.Action("Store", "Product")" class="text-decoration-none text-secondary d-flex align-items-center">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left me-2" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z" />
            </svg>
            Back to Store
        </a>
    </div>

    <div class="row g-4">
        <!-- Product Images -->
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-3">
                    <!-- Main Product Image -->
                    <div class="text-center mb-3">
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <img src="@Model.ImageUrl"
                                 alt="@Model.Name"
                                 class="img-fluid rounded"
                                 style="max-height: 400px; object-fit: contain;">
                        }
                        else
                        {
                            <div class="d-flex align-items-center justify-content-center bg-light rounded" style="height: 400px;">
                                <svg xmlns="http://www.w3.org/2000/svg" width="80" height="80" fill="#dee2e6" viewBox="0 0 16 16">
                                    <path d="M6.002 5.5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0" />
                                    <path d="M2.002 1a2 2 0 0 0-2 2v10a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V3a2 2 0 0 0-2-2zm12 1a1 1 0 0 1 1 1v6.5l-3.777-1.947a.5.5 0 0 0-.577.093l-3.71 3.71-2.66-1.772a.5.5 0 0 0-.63.062L1.002 12V3a1 1 0 0 1 1-1z" />
                                </svg>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Product Information -->
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body p-4">
                    <!-- Category Badge -->
                    <div class="mb-3">
                        <span class="badge bg-secondary">@Model.Category</span>
                    </div>

                    <!-- Product Name -->
                    <h1 class="h2 fw-bold mb-3">@Model.Name</h1>

                    <!-- Brand -->
                    <div class="d-flex align-items-center mb-3">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#6c757d" class="bi bi-tag me-2" viewBox="0 0 16 16">
                            <path d="M6 4.5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0m-1 0a.5.5 0 1 0-1 0 .5.5 0 0 0 1 0" />
                            <path d="M2 1h4.586a1 1 0 0 1 .707.293l7 7a1 1 0 0 1 0 1.414l-4.586 4.586a1 1 0 0 1-1.414 0l-7-7A1 1 0 0 1 1 6.586V2a1 1 0 0 1 1-1m0 5.586 7 7L13.586 9l-7-7H2z" />
                        </svg>
                        <span class="text-muted">@Model.Brand</span>
                    </div>

                    <!-- Price -->
                    <div class="mb-4">
                        <h2 class="text-primary fw-bold">$@Model.Price.ToString("N2")</h2>
                    </div>

                    <!-- Description -->
                    <div class="mb-4">
                        <h5 class="fw-bold mb-3">Description</h5>
                        <div class="text-muted">
                            @if (!string.IsNullOrEmpty(Model.Description))
                            {
                                @Html.Raw(Model.Description.Replace("\n", "<br>"))
                            }
                            else
                            {
                                <p>No description available for this product.</p>
                            }
                        </div>
                    </div>

                    @if (Model.StockQuantity > 0)
                    {
                    <!-- Action Buttons -->
                    <div class="mb-4">
                        <div class="row g-3">
                            <!-- Quantity Selector -->
                            <div class="col-md-4">
                                <div class="input-group">
                                    <button class="btn btn-outline-secondary" type="button" onclick="decrease(@Model.Id)">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                                            <path d="M4 8a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7A.5.5 0 0 1 4 8" />
                                        </svg>
                                    </button>
                                        <input type="number" id="quantityDetailsInput"
                                            class="form-control text-center [&::-webkit-inner-spin-button]:appearance-none" 
                                            min="1" max="99">
                                   
                                        
                                        <button class="btn btn-outline-secondary" type="button" onclick="increase(@Model.Id,@Model.StockQuantity)">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                                            <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4" />
                                        </svg>
                                    </button>
                                </div>
                            </div>

                                <!-- Add to Cart Button -->
                                <div class="col-md-4">
                                    <button class="btn btn-success w-100"
                                            onclick="addToCart(this, @Model.Id)">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-cart4 me-2" viewBox="0 0 16 16">
                                            <path d="M0 2.5A.5.5 0 0 1 .5 2H2a.5.5 0 0 1 .485.379L2.89 4H14.5a.5.5 0 0 1 .485.621l-1.5 6A.5.5 0 0 1 13 11H4a.5.5 0 0 1-.485-.379L1.61 3H.5a.5.5 0 0 1-.5-.5M3.14 5l.5 2H5V5zM6 5v2h2V5zm3 0v2h2V5zm3 0v2h1.36l.5-2zm1.11 3H12v2h.61zM11 8H9v2h2zM8 8H6v2h2zM5 8H3.89l.5 2H5zm0 5a1 1 0 1 0 0 2 1 1 0 0 0 0-2m-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0m9-1a1 1 0 1 0 0 2 1 1 0 0 0 0-2m-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0" />
                                        </svg>
                                        Add to Cart
                                    </button>
                                </div>
                           
                        </div>
                    </div>
                    }
                    else
                    {
                        <div class="text-danger mb-2">This Product is Out of Stock</div>
                    }

                    <!-- Product Specifications -->
                    <div class="border-top pt-4">
                        <h5 class="fw-bold mb-3">Product Details</h5>
                        <div class="row">
                            <div class="col-md-6 mb-2">
                                <span class="fw-semibold">Product ID:</span>
                                <span class="text-muted ms-2">#@Model.Id</span>
                            </div>
                            <div class="col-md-6 mb-2">
                                <span class="fw-semibold">Category:</span>
                                <span class="text-muted ms-2">@Model.Category</span>
                            </div>
                            <div class="col-md-6 mb-2">
                                <span class="fw-semibold">Brand:</span>
                                <span class="text-muted ms-2">@Model.Brand</span>
                            </div>
                            <div class="col-md-6 mb-2">
                                <span class="fw-semibold">Added:</span>
                                <span class="text-muted ms-2">@Model.CreatedAt</span>
                            </div>
                            <div class="col-md-6 mb-2">
                                <span class="fw-semibold">Updated:</span>
                                <span class="text-muted ms-2">@Model.LastUpdatedAt</span>
                            </div>
                            @if (Model.StockQuantity > 0)
                            {
                            <div class="col-md-6 mb-2">
                                <span class="fw-semibold">Availability:</span>
                                <span class="text-success ms-2">In Stock (@Model.StockQuantity)</span>
                            </div>
                            }
                            else
                            {
                            <div class="col-md-6 mb-2">
                                <span class="fw-semibold">Availability:</span>
                                <span class="text-danger ms-2">Out of Stock</span>
                            </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Related Products -->
    @if (Model.RelatedProducts?.Any() == true)
    {
        <div class="mt-5">
            <h3 class="fw-bold mb-4">Related Products</h3>
            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
                @foreach (var product in Model.RelatedProducts)
                {
                    <div class="col">
                        <div class="card h-100 border-0 shadow-sm">
                            <!-- Product Image -->
                            <div class="text-center p-3" style="height: 200px; background-color: #f8f9fa;">
                                @if (!string.IsNullOrEmpty(product.ImageUrl))
                                {
                                    <img src="@product.ImageUrl"
                                         class="img-fluid h-100"
                                         alt="@product.Name"
                                         style="object-fit: contain;">
                                }
                                else
                                {
                                    <div class="d-flex align-items-center justify-content-center h-100">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="#dee2e6" viewBox="0 0 16 16">
                                            <path d="M6.002 5.5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0" />
                                            <path d="M2.002 1a2 2 0 0 0-2 2v10a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V3a2 2 0 0 0-2-2zm12 1a1 1 0 0 1 1 1v6.5l-3.777-1.947a.5.5 0 0 0-.577.093l-3.71 3.71-2.66-1.772a.5.5 0 0 0-.63.062L1.002 12V3a1 1 0 0 1 1-1z" />
                                        </svg>
                                    </div>
                                }
                            </div>

                            <!-- Product Info -->
                            <div class="card-body d-flex flex-column">
                                <h6 class="card-title fw-bold mb-2">@product.Name</h6>
                                <div class="mt-auto">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <span class="text-primary fw-bold">$@product.Price.ToString("N2")</span>
                                        <a href="@Url.Action("Details", "Product", new { id = product.Id })"
                                           class="btn btn-sm btn-outline-primary">
                                            View
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
</div>


<script>
        document.addEventListener("DOMContentLoaded", function () {
            console.log("called")
        const input = document.getElementById("quantityDetailsInput");
            if (input) {
                let value = getQuantity(@Model.Id);
            if(isNaN(value))
                {
                    value = 0
                }

                input.value = value;
            }
        });

</script>