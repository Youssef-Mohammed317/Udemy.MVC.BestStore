@{
	var currentController =
	ViewContext.RouteData.Values["controller"]?.ToString();

	var currentAction =
	ViewContext.RouteData.Values["action"]?.ToString();
}
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@(string.IsNullOrEmpty(ViewData["Title"]?.ToString() ?? "") ? "Best Store" : $"{ViewData["Title"]} - Best Store")</title>
	<script type="importmap"></script>
	<link rel="icon" href="~/uploads/images/icon.png" />
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/BestStore.Web.styles.css" asp-append-version="true" />
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
</head>
<body>
	<partial name="_CartCookieScriptPartial" />
	<header>
		@await Html.PartialAsync("_NavPartial")
	</header>

	<div class="container">
		@await Html.PartialAsync("_NotificationPartial")
	</div>
	@if (currentController == "Home" && currentAction == "Index")
	{
		@RenderBody()
	}
	else
	{
		<div class="container mt-3">
			<main role="main" class="pb-3">
				@RenderBody()
			</main>
		</div>
	}


	<footer class="border-top footer text-muted">
		<div class="container">
			<img src="~/uploads/images/icon.png" alt="" width="30" class="me-2" />
			&copy; 2026 - Best Store - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
		</div>
	</footer>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
